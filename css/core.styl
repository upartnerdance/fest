WHITE = #fff
BLACK = #010101
GRAY = #484848

bubble(COLOR)
  color white
  background linear-gradient(top, lighten(COLOR, 30%), COLOR)
  text-shadow 0 -1px 0 rgba(black, .6)
  &:hover
    background COLOR
  &:active
    background COLOR
    box-shadow inset 0 1px 3px rgba(black, .4)

// page setup
html, body
  height 100%

.wrapper
  min-height 70%
  height auto !important
  margin-bottom 40px

@media (min-width: 1200px)
  .container
    max-width 940px

// shared components
.push
  margin-bottom 20px

.btn-huge
  padding 14px
  font-size 18px

.btn-blue-bubble
  border-color lighten(BLACK, 30%)
  bubble(TERTIARY)

.icons-ul
  margin 0

// nav
.navbar
  // box-shadow 0 1px 2px rgba(black, .1)
  // background PRIMARY
  border-bottom 1px solid #f3f3f3
  // background #fcfcfc
  background #fff
  z-index 100
  a, li > a
    line-height 60px
    color #333
    &:hover
      color #888

  li.active > a
    color PRIMARY
    background-color rgba(WHITE, .3)
    &:hover
      color PRIMARY
      // color #888
      background-color rgba(WHITE, .5)

  .navbar-toggle
    border-color rgba(WHITE, .4)
    &:hover
      background-color rgba(WHITE, .2)
    .icon-bar
      background-color rgba(WHITE, .6)

.navbar-static-top
  margin-bottom 0

// home jumbotron
.banner
  background url(../img/jean.png) top center
  box-shadow inset 0 -1px 3px rgba(black, .2)
  z-index 1
  padding-top 20px
  padding-bottom 10px

  .logo
    margin-top 10px

  img
    max-width 100%
    margin-bottom 20px
    relative top 0 left -2px

  .lead
    margin-top 10px
    background rgba(WHITE, .8)
    padding 8px 10px 8px 14px
    border-radius 5px
    color GRAY
    text-shadow 0 1px 0 #fff

// flashy meta
.comp-meta
  margin-top 30px

  font-size 1.2em

  > div
    padding-right 40px

  p, address
    max-width 430px

    color lighten(BLACK, 56%)

