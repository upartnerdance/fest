// mission
.mission
  padding 30px 0 50px 0

  color WHITE

  background SECONDARY

  text-shadow 0 -1.5px 0 rgba(black, .6)
  hr
    opacity .6
  ul
    margin 0

    font-size 15px
    font-weight 300

  li
    margin-bottom 10px

@media (min-width: 768px)
  .mission ul
    font-size 20px

// register
.register
  table ul
    margin 0
    padding-left 24px

  .icon-usd
    color #468847
  .icon-ban-circle
    color #b94a48

// schedule
.schedule
  th
    min-width 90px

// footer
.footer
  border-top 5px solid lighten(BLACK, 20%)
